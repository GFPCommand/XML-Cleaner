<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:w="clr-namespace:XML_Cleaner.Commands;assembly=XML Cleaner"
		mc:local="clr-namespace:XML_Cleaner.ViewModel"
        mc:Ignorable="d"
        Width="600" Height="500"
        x:Class="XML_Cleaner.MainWindow"
        Title="XML Cleaner"
        Icon="Assets/logo.ico"
        Background="White"
		CanResize="False">
	
    <Grid ShowGridLines="False" Margin="30, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"></ColumnDefinition>
            <ColumnDefinition Width="9*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- 1st row -->
        <!-- open file -->

        <Grid ShowGridLines="False" Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border x:Name="FilePathElement"
                    Background="#f0f0f0"
                    BorderBrush="Black"
                    BorderThickness="0"
                    CornerRadius="3"
                    Margin="10">
                <TextBlock Text="File path..."
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Margin="10"/>
            </Border>
            <!-- Open file command -->
            <Button x:Name="OpenFileButton"
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    Margin="5"
                    HorizontalAlignment="Left">
                <Image Source="Assets/folder.png"/>
            </Button>
        </Grid>

        <!-- 2nd row -->
        <!-- info block -->

        <Border Grid.Row="1"
                BorderBrush="DarkGray"
                BorderThickness="1"
				Margin="10">

			<TextBlock x:Name="fileInfo"
					   Text="fileInfo"
					   TextWrapping="Wrap"
					   Margin="10"/>
			
        </Border>

        <Border Grid.Row="1"
                Grid.Column="1"
                BorderBrush="DarkGray"
                BorderThickness="1"
                Margin="10">

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="3*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				
				<TextBlock x:Name="cutFileInfo"
					   Text="newFileInfo"
					   TextWrapping="Wrap"
					   Margin="10"
                       Grid.Column=""/>

                <Button Grid.Row="1"
                        Grid.Column="0"
                        Content="Save"
                        Width="100"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center">
                </Button>

                <Button Grid.Row="1"
                        Grid.Column="1"
                        Content="Save as"
                        Width="100"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center">
                </Button>
			</Grid>
        </Border>

        <!-- 3rd row -->
        <!-- main action block -->

        <Border Grid.Row="2"
                BorderBrush="DarkGray"
                BorderThickness="1"
                Margin="10">

			<DataGrid>
				
			</DataGrid>
        </Border>

        <Border Grid.Row="2"
                Grid.Column="1"
                BorderBrush="DarkGray"
                BorderThickness="1"
                Margin="10">

                <StackPanel>
                    <TextBlock Text="123"
				               TextWrapping="Wrap"
				               Margin="10"/>
					
					<Grid Margin="10">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>

						<Button Grid.Column="0"
								Content="Add"
								HorizontalAlignment="Center"
								Width="100"
								HorizontalContentAlignment="Center">
						</Button>
						
						<Button Grid.Column="1"
								Content="Remove"
								HorizontalAlignment="Center"
								Width="100"
								HorizontalContentAlignment="Center">
						</Button>
					</Grid>

					<Button Content="Start clearing"
							Margin="10"
							HorizontalAlignment="Center"
							Width="200"
							HorizontalContentAlignment="Center">
					</Button>

					<ProgressBar Width="250"
								 Height="10">
					</ProgressBar>
                </StackPanel>

        </Border>
    </Grid>
</Window>

